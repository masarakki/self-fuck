%form.form-horizontal.well#input_form
  - @attributes.each do |attribute|
    .control-group
      %label.control-label= attribute[:title]
      .controls
        %input{:type => 'text', :class => 'span3', :placeholder => attribute[:default], :class => 'input-xlarge', :id => attribute[:key], :name => "attrs[#{attribute[:key]}]"}
        - if attribute[:hint]
          %p.help-block= attribute[:hint]
%form.well
  %h4
    hello, world
  %textarea#hello_world.span8
